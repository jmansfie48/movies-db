extends layout

block content
  h1= title
  p Welcome to #{title}
  if #{movies}.length === 0 {
    p You do not have any movies.
    a(type="button" href="/add-movie", title="Log Out") Add a movie
  } else {
      table
        thead
            tr
                th Title
                th Format
                th Length
                th Release Year
                th Rating
                th Actions
        tbody
        for movie in movies 
            tr
                td #{movie.title}
                td #{movie.format}
                td #{movie.length}
                td #{movie.releaseYear}
                td #{movie.rating}
  }